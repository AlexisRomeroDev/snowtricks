{% extends 'base.html.twig' %}

{% block title %}New Figure{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('figure_new') }}
{% endblock %}

{% block body %}

    <section id="sheet">

        {{ form_start(form) }}

        <div id="mainPicture">

            <h2 id="mainText">{{ form_row(form.name) }}</h2>

            <div class="controls_wrapper">
                <div class="controls">
                    <a href="#" class="control"><i class="fas fa-plus"></i></a>
                </div>
                <div  class="edit">
           {#         {{ form_row(form.mainImage.name) }}
                    {{ form_row(form.mainImage.filename) }}#}
                </div>
            </div>

        </div>

        <a id="seeAllMedia" class="btn">See All Media</a>

        <div id="medias">

            <div class="list pictures" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">

            </div>

            <button type="button" class="add_item_link btn" id="add_image" data-collection-holder-class="images">Ajouter une image</button>

            {{ form_label(form.videos) }}
            {{ form_errors(form.videos) }}

            <div class="list videos"  data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}"></div>

            {{ form_widget(form.videos) }}

            <button type="button" class="add_item_link btn" id="add_video" data-collection-holder-class="videos">Ajouter une video</button>

        </div>

        <article id="">
            <p>{{ form_label(form.text) }}</p>
            <p>{{ form_errors(form.text) }}</p>
            <p>{{ form_widget(form.text) }}</p>
        </article>

        <aside id="">

            <div id="infos">
                {{ form_row(form.group) }}
            </div>

        </aside>

        <button class="btn">{{ button_label|default('Save') }}</button>

        {{ form_end(form) }}

        <button class="btn"><a href="{{ path('figure_index') }}">Retour Ã  la liste</a></button>

    </section>

{% endblock %}
